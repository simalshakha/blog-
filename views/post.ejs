<h1><%= data.title %></h1>
<p><strong>By:</strong> <%= username %></p>

<article class="article">
    <% if (data.image) { %>
        <img src="<%= data.image %>" alt="Post Image" class="post-image" />
    <% } %>
    <p><%= data.body %></p>
</article>

<hr>

<section class="topics">
    <h2>Topics</h2>
    <% if (topics.length > 0) { %>
        <ul>
            <% topics.forEach(topic => { %>
                <li style="margin-bottom: 1.5rem;">
                    <% if (topic.type === 'header') { %>
                        <h3><%= topic.content %></h3>
                    <% } else if (topic.type === 'text') { %>
                        <p><%= topic.content %></p>
                    <% } else if (topic.type === 'image') { %>
                        <img src="<%= topic.content %>" alt="Topic Image" style="max-width: 300px; border-radius: 8px;" />
                    <% } %>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No topics available for this post.</p>
    <% } %>
</section>

<a href="/dashboard">&larr; Back</a>

<div class="admin-title">
    <h2>Add New Topic</h2>
</div>

<form action="/Add-topics/<%= data._id %>" method="POST">
  <label for="type">Type:</label>
  <select name="type" id="type" required>
    <option value="">Select type</option>
    <option value="header">Header</option>
    <option value="text">Text</option>
    <option value="image">Image (URL)</option>
  </select>

  <input type="text" name="content" placeholder="Enter content or image URL" required />

  <button type="submit">Create Topic</button>
</form>

