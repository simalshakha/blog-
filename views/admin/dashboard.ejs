<div class="admin-title">
  <h2>Posts</h2>
  <p><strong>Logged in as:</strong> <%= username %></p>

 
  <a href="/add-post" class="button">+ Add New</a>
</div>

<ul class="admin-posts">
  <% data.forEach(post => { %>
    <li>
      <% if (post.user && post.user.username) { %>
        <div class="post-author" style="margin-bottom: 5px;">
          <strong>By <%= post.user.username %></strong>
        </div>
      <% } %>

      <a href="/post/<%= post._id %>">
        <%= post.title %> &nearr;
      </a>

      <div class="admin-post-controls">
        <a href="/edit-post/<%= post._id %>" class="btn">Edit</a>
        <a href="/Add-topics/<%= post._id %>" class="btn">Add topics</a>

        <form action="/delete-post/<%= post._id %>?_method=" method="POST">
          <input type="submit" value="Delete" class="btn-delete btn">
        </form>
      </div>
    </li>
  <% }) %>
</ul>
